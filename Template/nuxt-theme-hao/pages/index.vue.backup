<script>
import HeaderNavigation from '../components/HeaderNavigation.vue'
import Footer from '../components/Footer.vue'

export default {
  name: 'IndexPage',
  components: {
    HeaderNavigation,
    Footer
  },
  data() {
    return {
      isLoading: true,
      darkMode: false,
      moments: [
        { content: "目前近200篇文章仅6篇为付费阅读，考虑是否增加一些付费阅读文章~~~~看各位对哪方面的内容比较感兴趣" },
        { content: "没人爱发电和赞赏，都没钱吃饭啦/(ㄒoㄒ)/~~" },
        { content: "最近在研究Vue3的新特性，感觉很有意思！" },
        { content: "今天天气不错，适合写代码～" },
        { content: "分享一些实用的开发技巧，希望对大家有帮助" },
        { content: "目前近200篇文章仅6篇为付费阅读，考虑是否增加一些付费阅读文章~~~~看各位对哪方面的内容比较感兴趣" }
      ]
    }
  },
  mounted() {
    this.initApp()
  },
  methods: {
    initApp() {
      // 初始化应用
      this.initTheme()
      this.initGreeting()
      this.initSubtitle()
      this.endLoading()
    },
    
    initTheme() {
      const savedTheme = localStorage.getItem('theme')
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme)
        this.darkMode = savedTheme === 'dark'
      } else {
        // 根据系统偏好设置主题
        const isDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches
        const theme = isDarkMode ? 'dark' : 'light'
        document.documentElement.setAttribute('data-theme', theme)
        this.darkMode = isDarkMode
      }
    },
    
    initGreeting() {
      // 初始化问候语
      setTimeout(() => {
        const greetingBox = document.getElementById('greetingBox')
        if (greetingBox) {
          const greeting = document.createElement('div')
          greeting.id = 'greeting'
          greeting.innerHTML = this.getGreetingText()
          greetingBox.appendChild(greeting)
          
          setTimeout(() => {
            greeting.classList.add('shown')
          }, 1000)
          
          setTimeout(() => {
            greeting.classList.remove('shown')
            setTimeout(() => {
              greetingBox.remove()
            }, 500)
          }, 3000)
        }
      }, 100)
    },
    
    getGreetingText() {
      const hour = new Date().getHours()
      const greetings = [
        { start: 0, end: 5, text: "晚安😴" },
        { start: 6, end: 9, text: "早上好鸭👋, 祝你一天好心情！" },
        { start: 10, end: 10, text: "上午好👋, 状态很好，鼓励一下～" },
        { start: 11, end: 11, text: "11点多啦, 在坚持一下就吃饭啦～" },
        { start: 12, end: 14, text: "午安👋, 宝贝" },
        { start: 14, end: 18, text: "🌈充实的一天辛苦啦！" },
        { start: 19, end: 19, text: "19点喽, 奖励一顿丰盛的大餐吧🍔。" },
        { start: 20, end: 24, text: "晚上好👋, 在属于自己的时间好好放松😌~" }
      ]
      
      for (let greeting of greetings) {
        if (hour >= greeting.start && hour <= greeting.end) {
          return greeting.text
        }
      }
      return "晚上好👋"
    },
    
    initSubtitle() {
      // 初始化打字机效果
      setTimeout(() => {
        if (window.Typed) {
          this.startTyped()
        } else {
          this.loadTypedJS().then(() => {
            this.startTyped()
          })
        }
      }, 1800)
    },
    
    loadTypedJS() {
      return new Promise((resolve) => {
        const script = document.createElement('script')
        script.src = 'https://npm.elemecdn.com/typed.js@2.0.12/lib/typed.min.js'
        script.onload = resolve
        document.head.appendChild(script)
      })
    },
    
    startTyped() {
      fetch("https://v1.hitokoto.cn")
        .then(response => response.json())
        .then(data => {
          const strings = [
            "Welcome to IceCMS ～",
            data.hitokoto,
            "出自 " + data.from
          ]
          
          new window.Typed("#subtitle", {
            strings: strings,
            startDelay: 300,
            typeSpeed: 100,
            loop: true,
            backSpeed: 50
          })
        })
        .catch(() => {
          new window.Typed("#subtitle", {
            strings: ["Welcome to IceCMS ～"],
            startDelay: 300,
            typeSpeed: 100,
            loop: true,
            backSpeed: 50
          })
        })
    },
    
    endLoading() {
      setTimeout(() => {
        this.isLoading = false
      }, 3000)
    },
    
    hideLoading() {
      this.isLoading = false
    },
    
    hideConsole() {
      // 隐藏控制台
      const console = document.getElementById('console')
      if (console) {
        console.style.display = 'none'
      }
    },
    
    switchDarkMode() {
      this.darkMode = !this.darkMode
      const theme = this.darkMode ? 'dark' : 'light'
      document.documentElement.setAttribute('data-theme', theme)
      localStorage.setItem('theme', theme)
    },
    
    scrollToTop() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      })
    },
    
    toRandomPost() {
      // 随机跳转到一篇文章
      const permalink = "/archives/1718891841850"
      window.location.href = permalink
    },
    
    openSearch() {
      // 打开搜索
      if (window.SearchWidget) {
        window.SearchWidget.open()
      }
    },
    
    goToMoments() {
      window.location.href = '/moments'
    },
    
    goToPost(url) {
      window.location.href = url
    },
    
    goToTag(tag) {
      window.location.href = `/${tag}.html`
    },
    
    scrollToPost() {
      if (document.querySelector(".pl-container")) {
        setTimeout(() => {
          window.scrollTo({
            top: window.innerHeight,
            behavior: 'smooth'
          })
        }, 1000)
      }
    },
    
    validatePageInput(event) {
      event.target.value = event.target.value.replace(/[^0-9]/g, '')
      if (event.target.value === '0') {
        event.target.value = ''
      }
    },
    
    checkPageJump(event) {
      if (event.key === 'Enter') {
        this.jumpToPage()
      }
    },
    
    jumpToPage() {
      const pageInput = document.getElementById('toPageText')
      const page = pageInput.value
      if (page && parseInt(page) > 0 && parseInt(page) <= 19) {
        window.location.href = `/${page}.html`
      }
    },
    
    changeSayHelloText() {
      const sayHi = document.getElementById('author-info__sayhi')
      const texts = ['你好啊！我是', '欢迎来到我的博客', '很高兴认识你', '一起来学习吧']
      const currentIndex = texts.indexOf(sayHi.textContent)
      const nextIndex = (currentIndex + 1) % texts.length
      sayHi.textContent = texts[nextIndex]
    },
    
    toggleAside() {
      document.documentElement.classList.toggle('hide-aside')
    },
    hideTodayCard() {
      const todayCard = document.getElementById('todayCard')
      if (todayCard) {
        todayCard.style.display = 'none'
      }
    },
    redirectToLogin() {
      const currentUrl = encodeURIComponent(window.location.href)
      window.location.href = `/login?redirect_uri=${currentUrl}`
    },
    showConsole() {
      // 显示中控台的功能
      const console = document.getElementById('console')
      if (console) {
        console.style.display = 'block'
        console.classList.add('show')
      }
    },
    hideConsole() {
      // 隐藏中控台
      const console = document.getElementById('console')
      if (console) {
        console.style.display = 'none'
        console.classList.remove('show')
      }
    },
    hideAsideBtn() {
      // 边栏显示控制
      document.documentElement.classList.toggle('hide-aside')
    },
    switchCommentBarrage() {
      // 热评开关功能
      console.log('切换热评开关')
    }
  }
}
</script>

